            <couponControl:Coupon x:Name="coupon12" Width="400" Height="150" Margin="400,0,0,0"/>

            <couponControl:Coupon x:Name="coupon21" Width="400" Height="150" Margin="0,150,0,0"/>
            <couponControl:Coupon x:Name="coupon22" Width="400" Height="150" Margin="400,150,0,0"/>

            <couponControl:Coupon x:Name="coupon31" Width="400" Height="150" Margin="0,300,0,0"/>
            <couponControl:Coupon x:Name="coupon32" Width="400" Height="150" Margin="400,300,0,0"/>

            <couponControl:Coupon x:Name="coupon41" Width="400" Height="150" Margin="0,450,0,0"/>
